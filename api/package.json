  "devDependencies": {
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "nodemon-webpack-plugin": "^4.0.8",
    "prettier": "^1.17.0",
    "ts-loader": "6.0.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2"
  }
