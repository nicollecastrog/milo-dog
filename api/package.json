{
  "name": "milo-api",
  "version": "0.0.1",
  "description": "GraphQL API for fetching Milo data (namely, Instagram pics)",
  "main": "index.js",
  "author": "Nico Castro",
  "license": "MIT",
  "scripts": {
    "lint": "tslint --project ./ --config tslint.json",
    "precommit": "yarn typecheck && yarn lint-staged",
    "test": "jest",
    "typecheck": "tsc",
    "watch": "webpack --watch --mode development"
  },
  "lint-staged": {
    "*.{js,jsx,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "yarn lint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "graphql-yoga": "^1.17.4"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "nodemon-webpack-plugin": "^4.0.8",
    "prettier": "^1.17.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "6.0.0",
    "tslint": "^5.16.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.4.5",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/dist"
    ],
    "cacheDirectory": ".jest/cache",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/package.json",
      "<rootDir>/webpack.config.js",
      ".graphql"
    ]
  }
}
